<AnchorPane prefHeight="409.0" prefWidth="886.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
   <children>
      <Pane layoutY="-1.0" prefHeight="430.0" prefWidth="253.0" style="-fx-background-color: #FD4556;">
         <children>
            <ImageView fx:id="logo" fitHeight="102.0" fitWidth="137.0" layoutX="76.0" layoutY="21.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@pics/logo.png" />
               </image>
            </ImageView>
            <Label alignment="CENTER" layoutX="76.0" layoutY="136.0" prefHeight="27.0" prefWidth="102.0" text="Sign in">
               <font>
                  <Font name="Yu Gothic UI Semibold" size="20.0" />
               </font>
            </Label>
            <TextField fx:id="username" layoutX="40.0" layoutY="190.0" prefHeight="25.0" prefWidth="173.0" promptText="USERNAME" style="-fx-background-color: #53212B; -fx-border-color: white; -fx-text-inner-color: white;" />
            <PasswordField fx:id="password" layoutX="40.0" layoutY="242.0" prefHeight="25.0" prefWidth="173.0" promptText="PASSWORD" style="-fx-background-color: #53212B; -fx-border-color: white; -fx-text-inner-color: white;" />
            <Button fx:id="login" layoutX="93.0" layoutY="298.0" mnemonicParsing="false" onAction="#login" prefHeight="30.0" prefWidth="68.0" style="-fx-background-color: B4B4B8;" text="Log In">
               <font>
                  <Font name="Yu Gothic UI Semibold" size="12.0" />
               </font>
            </Button>
         </children>
      </Pane>
      <ImageView fx:id="img" fitHeight="430.0" fitWidth="649.0" layoutX="249.0" layoutY="-1.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@pics/background1.jpg" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
